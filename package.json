{
  "name": "@alekstar79/vue3-form-generator",
  "version": "1.0.0",
  "type": "module",
  "private": false,
  "description": "Генератор форм для Vue 3 с поддержкой TypeScript, валидации и кастомизации",
  "author": "Aleksey Tarasenko<alekstar79@yandex.ru>",
  "license": "MIT",
  "keywords": [
    "vue3",
    "form",
    "generator",
    "typescript",
    "validation",
    "vue-forms",
    "pinia"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alekstar79/vue3-form-generator"
  },
  "homepage": "https://github.com/alekstar79/vue3-form-generator#readme",
  "bugs": {
    "url": "https://github.com/alekstar79/vue3-form-generator/issues"
  },
  "main": "./lib/index.umd.js",
  "module": "./lib/index.es.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.es.js",
      "require": "./lib/index.umd.js"
    },
    "./dist/style.css": "./lib/style.css"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:demo && npm run build:lib",
    "build:github": "vite build -c vite.github.config.ts",
    "build:lib": "vite build -c vite.lib.config.ts",
    "build:demo": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "type-check": "vue-tsc --noEmit",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "pinia": "^2.1.6",
    "vue": "^3.5.26",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vitest/coverage-istanbul": "4.0.16",
    "@vitest/ui": "^0.34.6",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^8.45.0",
    "jsdom": "^27.3.0",
    "pinia": "^2.1.6",
    "sass": "^1.97.1",
    "sass-embedded": "^1.97.1",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16",
    "vue": "^3.5.26",
    "vue-router": "^4.2.4",
    "vue-tsc": "^1.8.8"
  },
  "engines": {
    "node": ">=20.19.0"
  }
}
